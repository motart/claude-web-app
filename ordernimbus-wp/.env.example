# Database Configuration
DB_NAME=ordernimbus_wp
DB_USER=wp_user
DB_PASSWORD=your_secure_database_password
DB_HOST=localhost

# WordPress Configuration
WORDPRESS_URL=https://ordernimbus.com
WORDPRESS_TITLE=OrderNimbus - Enterprise AI-Powered Sales Forecasting
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=your_secure_admin_password
WORDPRESS_ADMIN_EMAIL=admin@ordernimbus.com

# WordPress Security Keys (Generate new ones from https://api.wordpress.org/secret-key/1.1/salt/)
WP_AUTH_KEY=your_auth_key_here
WP_SECURE_AUTH_KEY=your_secure_auth_key_here
WP_LOGGED_IN_KEY=your_logged_in_key_here
WP_NONCE_KEY=your_nonce_key_here
WP_AUTH_SALT=your_auth_salt_here
WP_SECURE_AUTH_SALT=your_secure_auth_salt_here
WP_LOGGED_IN_SALT=your_logged_in_salt_here
WP_NONCE_SALT=your_nonce_salt_here

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_aws_account_id
ECR_REPOSITORY_URI=your_account_id.dkr.ecr.region.amazonaws.com/environment-ordernimbus

# SSL Certificate ARN (for HTTPS)
CERTIFICATE_ARN=arn:aws:acm:region:account:certificate/certificate-id

# CloudFormation Stack Parameters
ENVIRONMENT=production
DOMAIN_NAME=ordernimbus.com