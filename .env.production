# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Security Configuration
JWT_SECRET=${ENCRYPTED_JWT_SECRET}
JWT_EXPIRES_IN=1h
ENCRYPTION_KEY=${MASTER_ENCRYPTION_KEY}
SESSION_SECRET=${ENCRYPTED_SESSION_SECRET}

# Database Configuration (encrypted)
MONGODB_URI=${ENCRYPTED_MONGODB_URI}

# API Keys (encrypted)
SHOPIFY_CLIENT_ID=${ENCRYPTED_SHOPIFY_CLIENT_ID}
SHOPIFY_CLIENT_SECRET=${ENCRYPTED_SHOPIFY_CLIENT_SECRET}
AMAZON_ACCESS_KEY=${ENCRYPTED_AMAZON_ACCESS_KEY}
AMAZON_SECRET_KEY=${ENCRYPTED_AMAZON_SECRET_KEY}
AMAZON_MARKETPLACE_ID=${ENCRYPTED_AMAZON_MARKETPLACE_ID}

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET=ordernimbus-prod-data
S3_ENCRYPTION_KMS_KEY=${AWS_KMS_KEY_ID}

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=/var/log/ordernimbus
ENABLE_AUDIT_LOGS=true
LOG_RETENTION_DAYS=2555

# Security Headers
ALLOWED_ORIGINS=https://app.ordernimbus.com,https://dashboard.ordernimbus.com
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Monitoring & Alerting
SENTRY_DSN=${ENCRYPTED_SENTRY_DSN}
DATADOG_API_KEY=${ENCRYPTED_DATADOG_API_KEY}
ENABLE_HEALTH_CHECKS=true

# Compliance
SOC2_COMPLIANCE=true
DATA_RETENTION_POLICY=enabled
AUDIT_TRAIL_ENABLED=true
ENCRYPTION_AT_REST=true

# ML Model Configuration
PYTHON_PATH=/usr/bin/python3
MODEL_STORAGE_PATH=/secure/models
MODEL_ENCRYPTION_ENABLED=true

# Backup Configuration
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_RETENTION_DAYS=2555
AUTOMATED_BACKUP_SCHEDULE=0 2 * * *